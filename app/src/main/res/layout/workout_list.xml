<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/workoutList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/workoutType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Fitness Type:"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/workoutRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:textColor="@color/black"
                android:text="Work Rate:"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/workoutInstruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:textColor="@color/black"
                android:text="@string/coach_instructions_text"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/workoutProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:text="@string/workout_progress_text"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/workoutName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/workoutname_text"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <Button
                android:id="@+id/challengeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:layout_alignParentRight="true"
                android:text="@string/challenge_text" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>